<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="rootPane" alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/8.0.45" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fredtm.desktop.controller.chart.TimesChartController">
   <children>
      <HBox alignment="CENTER" spacing="10.0" VBox.vgrow="NEVER">
         <children>
            <Label text="Escala de tempo:" />
            <ChoiceBox fx:id="chcBox" prefWidth="150.0">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </ChoiceBox>
            <Button fx:id="btnPoints" maxHeight="52.0" maxWidth="52.0" minHeight="52.0" minWidth="52.0" mnemonicParsing="false" onAction="#onPointsClicked" styleClass="btnPoints" />
            <Button fx:id="btnLines" alignment="CENTER" maxHeight="52.0" maxWidth="52.0" minHeight="52.0" minWidth="52.0" mnemonicParsing="false" onAction="#onLinesClicked" styleClass="btnLines" />
            <Button fx:id="btnLinesCumulative" alignment="CENTER" maxHeight="52.0" maxWidth="52.0" minHeight="52.0" minWidth="52.0" mnemonicParsing="false" onAction="#onCumulativeClicked" styleClass="btnCumulative" />
            <Button fx:id="btnHorizontal" alignment="CENTER" maxHeight="52.0" maxWidth="52.0" minHeight="52.0" minWidth="52.0" mnemonicParsing="false" onAction="#onHorizontalClicked" styleClass="btnHorizontal" />
            <Button minHeight="52.0" minWidth="52.0" mnemonicParsing="false" onAction="#saveAsPng" text="Salvar">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Button>
         </children>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </HBox>
      <Label alignment="CENTER" contentDisplay="CENTER" text="Tempos coletados" VBox.vgrow="NEVER">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
   </children>
</VBox>
