<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="rootPane" alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/8.0.45" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fredtm.desktop.controller.chart.TimeByActivityController">
   <children>
      <HBox alignment="CENTER" spacing="10.0" VBox.vgrow="NEVER">
         <children>
            <Label text="Escala de tempo:" />
            <ChoiceBox fx:id="chcBox" prefWidth="150.0">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </ChoiceBox>
            <Button fx:id="btnComparative" layoutX="270.0" layoutY="10.0" maxHeight="52.0" maxWidth="52.0" minHeight="52.0" minWidth="52.0" mnemonicParsing="false" onAction="#onComparativeClicked" text="Todos" />
            <Button fx:id="btnPizza" maxHeight="52.0" maxWidth="52.0" minHeight="52.0" minWidth="52.0" mnemonicParsing="false" onAction="#onPizzaClicked" styleClass="btnPizza" />
            <Button fx:id="btnVertical" maxHeight="52.0" maxWidth="52.0" minHeight="52.0" minWidth="52.0" mnemonicParsing="false" onAction="#onVerticalClicked" styleClass="btnVertical" />
            <Button fx:id="btnHorizontal" alignment="CENTER" maxHeight="52.0" maxWidth="52.0" minHeight="52.0" minWidth="52.0" mnemonicParsing="false" onAction="#onHorizontalClicked" styleClass="btnHorizontal" />
            <Button fx:id="btnSave" minHeight="52.0" minWidth="52.0" mnemonicParsing="false" onAction="#saveAsPng" styleClass="btnSave" text="Salvar">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Button>
         </children>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </HBox>
      <Label alignment="CENTER" contentDisplay="CENTER" text="Distribuição tempo/atividade" VBox.vgrow="NEVER">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
   </children>
</VBox>
